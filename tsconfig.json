{
  "compilerOptions": {
    "target": "ESnext",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/*", "test/*"]
}
